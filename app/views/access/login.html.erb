<% @page_title = "Admin Login" %>




  <div class="row">
    <div class="col-sm-6 center-block">
      <h2>Log In</h2>
      <%= form_tag({:action => 'attempt_login'},{class:"form-horizontal"}) do  %>

          <div class="form-group">
            <%= label_tag(:username) %>
            <%= text_field_tag :username,"",class: "form-control"  %>
          </div>

          <div class="form-group">
            <%= label_tag(:password) %>
            <%= password_field_tag(:password,"", class: "form-control") %>
          </div>

        <p>&nbsp;</p>
        <%= submit_tag('Log In', class: "btn btn-success") %>

      <% end %>

    </div>
  </div>