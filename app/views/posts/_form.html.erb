
<div class="form-group">
  <%= f.label(:title) %>
  <%= f.text_field(:title,:class => "form-control") %>
</div>

<div class="form-group">
  <%= f.label(:keywords) %>
  <%= f.text_field(:keywords,:class => "form-control") %>
</div>

<div class="form-group">
  <%=f.label(:position)%>
  <%=f.select(:position, 1..@post_count, {},{:class => "form-control"}) %>
</div>

<div class="check-box">
  <%=f.check_box(:visible)%>  <%=f.label(" visible?")%>
</div>

<div class="form-group">
  <%=f.label(:category)%> <br>
  <div class="radio-inline">
    <label>
      <%= f.radio_button(:category, 'news')%> News
    </label>
  </div>

  <div class="radio-inline">
    <label>
      <%= f.radio_button(:category, 'info')%> Information
    </label>
  </div>

  <div class="radio-inline">
    <label>
      <%= f.radio_button(:category, 'edu')%> educational
    </label>
  </div>

  <div class="radio-inline">
    <label>
      <%= f.radio_button(:category, 'ad')%> advertisement
    </label>
  </div>
</div>


<div class="form-group">
  <%= f.label(:content) %> <br>
  <%= f.text_area(:content, class: "form-control","rows" => 10) %>
</div>


<div class="form-group">
  <%= f.file_field(:image) %>
</div>

<div class="form-group">
  <%= f.label("Youtube's Video Url:") %>
  <%= f.text_field(:yUrl, class: "form-control") %>
</div>

<div class="form-group">
  <%= f.label("DailyMotion's Video Url:") %>
  <%= f.text_field(:dUrl, class: "form-control") %>
</div>






