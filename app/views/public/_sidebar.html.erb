<div class="col-md-4 col-md-offset-1 tpad sidebar">

  <section>
    <h3 class="tpad">Recent Posts</h3>
    <div class="list-group tpad">
      <% @rec_posts.each do |post| %>
          <%= link_to(post.title, {:controller => 'posts', :action => 'show', :id => post.permalink}, :class => "list-group-item")%>
      <% end %>

    </div>
    <hr>
  </section>

  <section>
    <h3 class="tpad">Recent Applications</h3>
    <div class="list-group tpad">
      <% @rec_apps.each do |app| %>
          <%= link_to(app.title, {:controller => 'apps', :action => 'show', :id => app.permalink}, :class => "list-group-item")%>
      <% end %>

    </div>
    <hr>
  </section>

  <section>
    <h3 class="tpad">About the Owner</h3>
    <div class="media tpad">
